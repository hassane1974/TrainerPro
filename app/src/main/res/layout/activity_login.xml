<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khouni.trainerpro.LoginActivity">


    <TextView
        android:id="@+id/Usertv"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="8dp"
        android:textSize="18dp"
        android:text="User Name"
        app:layout_constraintBottom_toBottomOf="@+id/Userlog"
        app:layout_constraintLeft_toLeftOf="@+id/LoginBt"
        app:layout_constraintRight_toRightOf="@+id/passTv"
        app:layout_constraintTop_toTopOf="@+id/Userlog"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:text="@string/Usertv"/>

    <EditText
        android:id="@+id/Userlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="JDOE"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="39dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/passTv"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textSize="18sp"
        android:textColorHighlight="@color/colorPrimary"
        android:text="Password"
        app:layout_constraintRight_toLeftOf="@+id/PassedT"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/PassedT"
        android:layout_marginEnd="18dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/LoginBt"
        app:layout_constraintTop_toTopOf="@+id/PassedT"/>

    <EditText
        android:id="@+id/PassedT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="welcome1"
        android:inputType="textPassword"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/Userlog"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/Userlog"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/Userlog"/>

    <Button
        android:id="@+id/LoginBt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Login"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="206dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/FailedLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="116dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>
